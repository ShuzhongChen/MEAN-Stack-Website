doctype html
html(lang='en', ng-app='myApp')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title Navbar Template for Bootstrap
    // Bootstrap core CSS
    link(href='libs/bootstrap/bootstrap.css', rel='stylesheet')
    // IE10 viewport hack for Surface/desktop Windows 8 bug
    link(href='../../assets/css/ie10-viewport-bug-workaround.css', rel='stylesheet')
    // Custom styles for this template
    link(href='navbar.css', rel='stylesheet')
    // Just for debugging purposes. Don't actually copy these 2 lines!
    //
      if lt IE 9script(src='../../assets/js/ie8-responsive-file-warning.js')
    script(src='../../assets/js/ie-emulation-modes-warning.js')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    //
      if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    .container
      // Static navbar
      nav.navbar.navbar-default(ng-controller='navController')
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') MatthewChen.com
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav
              li(ng-class="{active: isActive('/home')}")
                a(href='/home') Home
              li(ng-class="{active: isActive('/about')}")
                a(href='/about') About
              li(ng-class="{active: isActive('/contact')}")
                a(href='/contact') Contact
          // /.nav-collapse
        // /.container-fluid
      // Main component for a primary marketing message or call to action
      .container
        div(ng-view='')
    // /container
    script(type='text/javascript', src='libs/angular/angular.js')
    script(type='text/javascript', src='libs/angular-route/angular-route.js')
    script(type='text/javascript', src='js/app.js')
    script(type='text/javascript', src='js/controllers/homeController.js')
    script(type='text/javascript', src='js/controllers/aboutController.js')
    script(type='text/javascript', src='js/controllers/contactController.js')
    script(type='text/javascript', src='js/controllers/navController.js')
